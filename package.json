{
  "name": "boost-timer",
  "version": "1.0.5",
  "description": "A simple, modern desktop boost timer built with Electron.",
  "main": "main.js",
  "type": "commonjs",
  "author": "juandisay <info@juandisay.org>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac --arm64",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.boosttimer",
    "productName": "Boost Timer",
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache/**"
    ],
    "asar": true,
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "entitlements": null
    },
    "win": { "icon": "build/icon.ico" },
    "linux": { 
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ]
    },
    "directories": {
      "output": "dist"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "engines": {
    "node": ">=18"
  }
}


